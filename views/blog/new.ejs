<!--form that allows to post blog information to mongo db-->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="/blog" method="POST">
        <select name="categoryId">
          <% for(var i = 0; i < allCategories.length; i++) { %>
              <option value="<%allCategories[i]._id%>"><%=allCategories[i].category%></option>
          <% } %>
        </select><br/>
        <input name="title" type="text" placeholder="title"/> <!-- name is what will be sent though as a key value pair to the server-->
        <input name="body" type="text" placeholder="body"/>
        <input name="img" type="text" placeholder="image url"/>
        <!-- <input name="categories" type="category" placeholder="category"/> -->
        <input type="submit" value="Enter"/>
    </form>
  </body>
</html>
